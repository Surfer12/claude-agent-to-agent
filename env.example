t# Claude Agent-to-Agent Environment Configuration
# Copy this file to .env and fill in your actual values

# Required: Anthropic API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Model Configuration
CLAUDE_MODEL=claude-3-5-sonnet-20240620

# Optional: Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=claude_agent_interactions.log

# Optional: Development Settings
DEBUG=false
VERBOSE=false

# Optional: Network Configuration
HOST=0.0.0.0
PORT=8000

# Optional: Security Settings
ENABLE_FILE_OPERATIONS=true
ENABLE_CODE_EXECUTION=false
ENABLE_COMPUTER_USE=false

# Optional: MCP (Model Context Protocol) Settings
MCP_SERVER_URLS=

# Optional: Database Configuration (if using)
DATABASE_URL=

# Optional: Redis Configuration (if using)
REDIS_URL=

# Optional: Monitoring
ENABLE_METRICS=false
METRICS_PORT=9090
